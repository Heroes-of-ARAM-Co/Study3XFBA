<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			       x:Class="Study3XFBA.MainPage">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS" Value="20, 40, 20, 20" />
            <On Platform="Android, UWP" Value="20" />
        </OnPlatform>
    </ContentPage.Padding>
    <StackLayout>
        <Label Text="Enter a Phoneword:" />
        <Editor x:Name="phoneNumberText" Text="Test wejscia do pliku" />
        <Button x:Name="Zapis" Text="Translate" Clicked="OnTranslate" />
        <Button x:Name="Odczyt" Text="Call"  Clicked="OnCall" />
        <Editor x:Name="Output" Text="Output" />
    </StackLayout>
</ContentPage>