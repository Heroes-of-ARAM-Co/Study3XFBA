<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			       x:Class="Study3XFBA.MainPage">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS" Value="20, 40, 20, 20" />
            <On Platform="Android, UWP" Value="20" />
        </OnPlatform>
    </ContentPage.Padding>
    <StackLayout>
        <Label Text="Enter a Phoneword: " />
        <Entry x:Name="phoneNumberText" Text="Tu fpisz zapiz" />
        <Button x:Name="translateButton" Text="Zapis" Clicked="SavingButton" />
        <Button x:Name="callButton" Text="Odczyt" IsEnabled="True" Clicked="LoadingButton" />
        <Entry x:Name="poleOdczytu" Text="Tu bendzie otczyt" />
        <Switch x:Name="Mieszko" IsToggled="False" Toggled="OnMieszko" />
        <Button x:Name="ModelTitleButton" Text="Read Title" Clicked="ReadTitle" />
    </StackLayout>
</ContentPage>